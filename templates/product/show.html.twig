{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ product.size }}</td>
            </tr>
            <tr>
                <th>KeyWords</th>
                <td>
                    {% for keyWord in product.keyWords %}
                        <span>{{ keyWord }}</span>
                    {% endfor %}</td></td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ product.category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>


    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a class="btn btn-warning" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

        {{ include('product/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
